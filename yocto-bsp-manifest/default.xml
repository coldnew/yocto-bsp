<?xml version="1.0" encoding="UTF-8"?>
<manifest>

  <remote fetch="git://git.yoctoproject.org" name="yocto"/>
  <remote fetch="git://git.openembedded.org" name="oe"/>
  <remote fetch="git://github.com" name="github"/>

  <!-- Default use yocto fido branch -->
  <default sync-j="4" revision="master"/>

  <!-- yocto and openembedded -->
  <project remote="yocto" name="poky" path="sources/poky"/>
  <project remote="oe" name="meta-openembedded" path="sources/meta-openembedded"/>

  <!-- Add openembedded-core to make contribute to yocto more easy-->
  <project remote="oe" name="openembedded-core" path="sources/openembedded-core"/>

  <!-- raspberrypi -->
  <project remote="yocto" name="meta-raspberrypi" path="sources/meta-raspberrypi"/>

  <!-- Freescale -->
  <project remote="github" name="Freescale/meta-freescale" path="sources/meta-freescale"/>
  <project remote="github" name="Freescale/meta-freescale-distro" path="sources/meta-freescale-distro"/>
  <project remote="github" name="Freescale/meta-freescale-3rdparty" path="sources/meta-freescale-3rdparty"/>

  <!-- Qt5 -->
  <project remote="github" name="meta-qt5/meta-qt5" path="sources/meta-qt5"/>

  <!-- stm32 -->
  <project remote="github" name="coldnew/meta-stm32" path="sources/meta-stm32"/>

  <!-- My personal layers -->
  <project remote="github" name="coldnew/coldnew-layers" path="sources/coldnew-layers" />
</manifest>
